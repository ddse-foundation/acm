{
  "name": "acm-monorepo",
  "version": "0.5.0",
  "private": true,
  "description": "Root workspace for the ACM framework and documentation site.",
  "scripts": {
    "bootstrap": "pnpm install",
    "framework:build": "pnpm --filter @ddse/acm build",
    "framework:test": "pnpm --filter @ddse/acm test",
    "docs:install": "pnpm --filter @ddse/docs-site install",
    "docs:lint": "pnpm --filter @ddse/docs-site lint",
    "docs:build": "pnpm --filter @ddse/docs-site build",
    "docs:serve": "pnpm --filter @ddse/docs-site serve"
  },
  "packageManager": "pnpm@8.15.0"
}
